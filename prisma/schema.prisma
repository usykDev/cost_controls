generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id        String   @id @default(cuid()) // Session ID
  data      Json     // Session data
  expires   DateTime // Expiration date of the session
  createdAt DateTime @default(now()) // Creation timestamp
  updatedAt DateTime @updatedAt // Last update timestamp
}


model User {
  id        Int      @id @default(autoincrement())      // Auto-incrementing primary key
  username  String   @unique                            // Unique username
  name      String                                      // Required name field
  password  String                                      // Required password field
  avatar    String?  @default("")                       // Optional avatar field with a default value
  gender    Gender                                      // Enum for gender (male/female)
  transactions Transaction[]                            // Relationship to Transaction model


  createdAt DateTime @default(now())               // Timestamp for creation
  updatedAt DateTime @updatedAt                    // Auto-updating timestamp
}

enum Gender {
  male
  female
}


model Transaction {
  id          Int         @id @default(autoincrement())                                                  // Auto-incrementing primary key
  userId      Int                                                                                        // Foreign key to User model
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  description String                                       // Required description field
  paymentType PaymentType                                  // Enum for payment type (cash/card)
  category    Category                                     // Enum for category type
  amount      Float                                        // Required amount
  location    String?      @default("Unknown")             // Optional location with default value
  date        DateTime                                     // Required date

  createdAt   DateTime     @default(now())                 // Timestamp for creation
  updatedAt   DateTime     @updatedAt                      // Auto-updating timestamp
}

// Enums for Payment Type and Category
enum PaymentType {
  cash
  card
}

enum Category {
  saving
  expense
  investment
}